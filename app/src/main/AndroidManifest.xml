<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chinapex.com.wallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--扫一扫相关权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />


    <application
        android:name=".global.ApexWalletApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 新用户activity -->
        <activity
            android:name=".view.NewVisitorActivity"
            android:theme="@style/AppTheme.MyTranslucentNavigation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主activity -->
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.wallet.CreateWalletActivity" />
        <activity android:name=".view.assets.WalletDetailActivity" />
        <activity android:name=".view.assets.TransferActivity" />
        <activity android:name=".view.assets.GatheringActivity" />
        <activity android:name=".view.wallet.BackupWalletActivity"></activity>
    </application>

</manifest>