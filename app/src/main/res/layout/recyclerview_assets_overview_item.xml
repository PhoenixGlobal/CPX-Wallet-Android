<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cv_assets_rv_item_bg_corner"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_assets_rv_item_height"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_assets_overview_item_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:scaleType="center"
            android:background="@drawable/logo_nep5_cpx" />

        <TextView
            android:id="@+id/tv_assets_overview_assets_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_assets_overview_item_logo"
            android:text="CPX"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/card_title_big" />

        <Button
            android:id="@+id/bt_assets_overview_map"
            android:layout_width="63dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tv_assets_overview_assets_name"
            android:background="@drawable/shape_assets_overview_map_def"
            android:text="一键映射"
            android:textColor="@color/c_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_assets_overview_assets_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/bt_assets_overview_map"
            android:gravity="end"
            android:lines="1"
            android:text="2.00320000"
            android:textColor="@color/c_5D99FA"
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>