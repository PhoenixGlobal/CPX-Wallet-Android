<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chinapex.com.wallet.view.me.portrait.MePortraitActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/tb_bg">

        <TextView
            android:id="@+id/tv_portrait_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/personal_portrait"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_18sp" />

        <TextView
            android:id="@+id/tv_portrait_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_portrait_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/paratext_14sp" />

        <ImageButton
            android:id="@+id/ib_portrait_switch_wallet"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:src="@drawable/icon_switch" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_portrait"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/c_1253BF"
        app:tabSelectedTextColor="@color/c_1253BF"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/c_666666" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_portrait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>
