<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    app:cardCornerRadius="@dimen/cv_assets_rv_item_bg_corner"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_assets_rv_item_height">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/ll_me_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_me_rv_item_wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/assets_rv_item_wallet_name"
                    android:textColor="@color/tv_gathering_wallet_name"
                    android:textSize="@dimen/tv_assets_rv_item_wallet_name_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_me_rv_item_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_bg_me_item_backup"
                    android:padding="3dp"
                    android:text="@string/tv_me_item_backup"
                    android:textColor="#B3D38D"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_me_rv_item_wallet_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:ems="6"
                android:singleLine="true"
                android:text="@string/assets_rv_item_wallet_addr"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/v_assets_rv_item"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/v_assets_rv_item_margin_end"
            android:background="@color/recyclerview_separator_view" />

        <TextView
            android:id="@+id/tv_me_rv_item_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/tv_assets_rv_item_balance_margin_end"
            android:text="@string/tv_assets_rv_item_balance"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_assets_rv_item_balance_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_me_rv_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/tv_assets_rv_item_unit_margin_end"
            android:text="@string/tv_assets_rv_item_unit"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>
</android.support.v7.widget.CardView>