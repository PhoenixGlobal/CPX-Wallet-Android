<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cv_assets_rv_item_bg_corner"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_assets_rv_item_height"
        android:background="@android:color/white"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_assets_rv_item_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_rv_item_wallet_name"
                android:textColor="@color/tv_gathering_wallet_name"
                android:textSize="@dimen/tv_assets_rv_item_wallet_name_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_assets_rv_item_wallet_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:ems="12"
                android:singleLine="true"
                android:text="@string/assets_rv_item_wallet_addr"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:src="@drawable/icon_wallet_item_arrows" />

    </RelativeLayout>
</android.support.v7.widget.CardView>