<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chinapex.com.wallet.view.wallet.ExportKeystoreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/tb_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/tv_title_export_keystore"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_me_title_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:text="@string/export_keystore_off_line"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tv_me_title_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/export_keystore_off_line_content"
        android:textColor="@color/c_535353"
        android:textSize="@dimen/tv_me_title_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:text="@string/export_keystore_no_net"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tv_me_title_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/export_keystore_no_net_content"
        android:textColor="@color/c_535353"
        android:textSize="@dimen/tv_me_title_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:text="@string/export_keystore_strongbox"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tv_me_title_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/export_keystore_strongbox_content"
        android:textColor="@color/c_535353"
        android:textSize="@dimen/tv_me_title_size" />

    <TextView
        android:id="@+id/tv_export_wallet_keystore"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_import_wallet_tv_bg"
        android:gravity="top|start"
        android:paddingBottom="7dp"
        android:paddingEnd="9dp"
        android:paddingStart="9dp"
        android:paddingTop="7dp"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_export_wallet_keystore"
        android:layout_width="293dp"
        android:layout_height="39dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:background="@drawable/shape_export_keystore_bt_bg"
        android:text="@string/bt_copy_keystore_text"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_me_title_size" />
</LinearLayout>
